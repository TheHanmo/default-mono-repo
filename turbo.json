{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env", "pnpm-lock.yaml", "package.json"],
  "pipeline": {
    "build": { "dependsOn": ["^build"], "outputs": [".next/**", "dist/**", "build/**"] },
    "dev":   { "cache": false, "persistent": true },
    "lint":  { "outputs": [] },
    "typecheck": { "outputs": [] },
    "clean": { "cache": false }
  }
}
